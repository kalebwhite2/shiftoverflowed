<%= form_with url: sign_in_path do |form| %>
    <%= form.label :email, "Email: " %>
    <% if params[:signup_email] %>
        <%= form.text_field :email, value: params[:signup_email], class: "form-control mb-3" %>
    <% else %>
        <%= form.text_field :email, class: "form-control mb-3" %>
    <% end %>

    <%= form.label :password, "Password: " %>
    <%= form.text_field :password, class: "form-control mb-3" %>
    
    <%= link_to 'Forgot password?', reset_password_path, class: "d-block mb-3" %>

    <%= form.submit "Sign In", class:"btn btn-primary" %> 
<% end %>